# Youtube API Credentials
YOUTUBE_CLIENT_SECRET_FILE='client_secret.json'
YOUTUBE_TOKEN_FILE='token.json'
YOUTUBE_CATEGORY_ID="24" # See https://developers.google.com/youtube/v3/docs/videoCategories/list
YOUTUBE_PRIVACY_STATUS="unlisted"

# --- Feature Flags ---
# Set to 'true' to enable posting to social media platforms
POST_TO_SOCIAL=true

# Mailgun api key to send to mail list
SEND_NEWSLETTER=true
MAILGUN_API_KEY=YOUR_API_KEY
MAILGUN_API_URL="https://api.mailgun.net/v3/YOUR_DOMAIN/messages"
MAILGUN_FROM="The postmaster <postmaster@YOUR_DOMAIN>"
MAILGUN_TO="The maillist <no-reply@YOUR_DOMAIN>"
MAILGUN_TEMPLATE="YOUR_MAILGUN_TEMPLATE"
MAILGUN_SUBJECT="YOUR_MAILGUN_SUBJECT"

# Set to 'true' to enable pushing changes to git repository (requires PELICAN_PROJECT_DIR to be set)
PUSH_TO_GIT=True
GIT_BRANCH=main # Optional: Specify branch to push to (defaults to 'main')

# Set to 'true' (default) to enable archiving of generated artifacts into the 'archive/' directory
ARCHIVE_ARTIFACTS=true

# Set to 'true' to enable cleanup of temporary files in the output directory after processing
CLEANUP_ARTIFACTS=true

# Set to 'true' (default) or 'false' to enable/disable fade-in/out effects on generated audio
ENABLE_AUDIO_EFFECTS=true

# Optional: Comma-separated list of steps to skip during workflow execution
# Valid steps: audio, git, social, archive, export, image, feature_image, article_image
# Example to test: SKIP_STEPS=export,git,social,archive
# Example to skip all steps in order:
#SKIP_STEPS=topic,article,image,feature_image,article_image,audio,export,git,social,archive
